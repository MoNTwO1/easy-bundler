{{#> Login }}
  <form class="login-page">
    <div class="login-page__content">
      {{> PageTitle title="Вход" }}
        {{> InputField className="login-page__input" title="Логин" name="login" placeholder="" id="login" errorText="" errorId="loginField"}}
        {{> InputField className="login-page__input" title="Пароль" name="password" type="password" placeholder="" id="password" errorText="" errorId="passwordField"}}
    </div>
    <div class="login-page__footer">
      {{> Button buttonId="authorizeBtn" text="Авторизоваться" page="chat"}}
      {{> Link url="../registration" text="Нет аккаунта?" page="registration" }}
    </div>
  </form>

{{/ Login }}

